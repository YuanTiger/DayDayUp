<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sws.study">

    <!--hardwareAccelerated:是否开启硬件加速-->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DayDayUp"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DayDayUp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".customview.activity.MainCustomViewActivity" />
        <activity android:name=".customview.activity.SectorActivity" />
        <activity android:name=".customview.activity.ClipActivity" />
        <activity android:name=".customview.activity.XfermodeActivity" />
        <activity android:name=".customview.activity.CustomViewTextViewActivity" />
        <activity android:name=".customview.activity.CameraActivity" />
        <activity android:name=".customview.activity.BitmapDrawableActivity" />
        <activity android:name=".customview.activity.MaterialEditTextActivity" />
        <activity android:name=".customview.activity.MeasureActivity" />
        <activity android:name=".customview.activity.TagViewActivity" />
        <activity android:name=".customview.activity.TouchActivity" />
        <activity android:name=".customview.activity.ScalableImageViewActivity" />
        <activity android:name=".customview.activity.MultiTouchActivity" />
        <activity android:name=".customview.activity.TwoViewPagerActivity" />
        <activity android:name=".customview.activity.DragActivity" />
        <activity android:name=".anim.activity.MainAnimActivity" />
        <activity android:name=".anim.activity.AnimBaseActivity" />
        <activity android:name=".anim.activity.AnimSetActivity" />
        <activity android:name=".anim.activity.AnimKeyFrameActivity" />
        <activity android:name=".anim.activity.AnimInterpolatorActivity" />
        <activity android:name=".anim.activity.AnimTypeEvaluatorActivity" />
        <activity android:name=".anim.activity.LayerTypeActivity" />
        <activity android:name=".thread.activity.MainThreadActivity" />
        <activity android:name=".thread.activity.ThreadBaseActivity" />
    </application>

</manifest>